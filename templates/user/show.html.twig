{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="container col-md-6">
    <h1>Profil utilisateur</h1>

    <table class="table">
        <tbody>

            <tr>
                <th>Pr√©nom</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.lastname }}</td>
            </tr>
            <tr>
                <th>Adresse Email</th>
                <td>{{ user.email }}</td>
            </tr>

            <tr>
                <th>Telephone</th>
                <td>{{ user.phone }}</td>
            </tr>
            <tr>
                <th>image de profil</th>
                <td><img class="mr-3" src="{{ asset('uploads/' ~ app.user.picture) }}" alt="{{ app.user.lastname }}">
                </td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-danger" href="{{ path('user_edit', {'id': app.user.id}) }}">Editer profil</a>
    </div>
{% endblock %}
